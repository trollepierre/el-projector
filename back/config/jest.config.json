{
  "rootDir": "..",
  "resetMocks": true,
  "moduleFileExtensions": [
    "js",
    "json"
  ],
  "testURL": "http://localhost/",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "coverageDirectory": "<rootDir>/test/coverage",
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/config/jest.setup.js"],
  "coverageThreshold": {
    "global": {
      "branches": 65,
      "functions": 65,
      "lines": 80,
      "statements": 80
    }
  }
}
